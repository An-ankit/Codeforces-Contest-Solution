#include <bits/stdc++.h>
#define ll long long
 
using namespace std;
void solution(){
    int n;
    cin>>n;
    if(n&1)cout<<-1<<endl;
    else{
        cout<<n/2<<" "<<n/2<<" "<<0<<endl;
    }
}
 
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    int t;
    cin>>t;
    while(t--){
        solution();
    }
 
    return 0;
}
